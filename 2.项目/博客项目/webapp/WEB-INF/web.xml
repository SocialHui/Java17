<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                      http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1"
         metadata-complete="true">

  <!--注册-->
  <servlet>
    <servlet-name>reg</servlet-name>
    <servlet-class>service.RegServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>reg</servlet-name>
    <url-pattern>/reg</url-pattern>
  </servlet-mapping>

  <!--登录-->
  <servlet>
    <servlet-name>login</servlet-name>
    <servlet-class>service.LoginServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>login</servlet-name>
    <url-pattern>/login</url-pattern>
  </servlet-mapping>


  <!--查询个人文章列表-->
  <servlet>
    <servlet-name>myartlist</servlet-name>
    <servlet-class>service.MyArtServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>myartlist</servlet-name>
    <url-pattern>/myartlist</url-pattern>
  </servlet-mapping>

  <!--文章删除-->
  <servlet>
    <servlet-name>mydel</servlet-name>
    <servlet-class>service.MyDelServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>mydel</servlet-name>
    <url-pattern>/mydel</url-pattern>
  </servlet-mapping>


  <!--文章修改初始化接口-->
  <servlet>
    <servlet-name>initart</servlet-name>
    <servlet-class>service.InitArtServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>initart</servlet-name>
    <url-pattern>/initart</url-pattern>
  </servlet-mapping>

  <!--文章修改-->
  <servlet>
    <servlet-name>upart</servlet-name>
    <servlet-class>service.UpArtServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>upart</servlet-name>
    <url-pattern>/upart</url-pattern>
  </servlet-mapping>


  <!--文章添加-->
  <servlet>
    <servlet-name>addart</servlet-name>
    <servlet-class>service.AddArtServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>addart</servlet-name>
    <url-pattern>/addart</url-pattern>
  </servlet-mapping>

  <!--所有人文章列表-->
  <servlet>
    <servlet-name>list</servlet-name>
    <servlet-class>service.ListServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>list</servlet-name>
    <url-pattern>/list</url-pattern>
  </servlet-mapping>


  <!--文章详情页-->
  <servlet>
    <servlet-name>datail</servlet-name>
    <servlet-class>service.MyArtDatailServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>datail</servlet-name>
    <url-pattern>/datail</url-pattern>
  </servlet-mapping>


  <!--文章访问量+1-->
  <servlet>
    <servlet-name>rcount</servlet-name>
    <servlet-class>service.ArtRcountServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>rcount</servlet-name>
    <url-pattern>/rcount</url-pattern>
  </servlet-mapping>

</web-app>
